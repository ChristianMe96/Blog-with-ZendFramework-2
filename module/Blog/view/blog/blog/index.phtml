<?php
$title = 'Entries';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
    <a href="<?php echo $this->url('blog', array('action'=>'add'));?>">Add new Entry</a>
</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th>&nbsp;</th>
    </tr>
    <?php foreach ($entries as $entry) : ?>
        <tr>
            <td><?php echo $this->escapeHtml($entry->getTitle());?></td>
            <td><?php echo $this->escapeHtml($entry->getContent());?></td>
            <td>
                <a href="<?php echo $this->url('blog',
                    array('action'=>'edit', 'id' => $entry->getId()));?>">Edit</a>
                <a href="<?php echo $this->url('blog',
                    array('action'=>'delete', 'id' => $entry->getId()));?>">Delete</a>
            </td>
        </tr>
    <?php endforeach; ?>
</table>
